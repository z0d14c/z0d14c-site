---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro:assets';
import '@splidejs/splide/css';
import ImageCarouselClient from './ImageCarousel.tsx';

interface Props {
  images: ImageMetadata[];
}

const { images } = Astro.props;
---

<div class='splide max-w-full md:max-w-3xl mx-auto'>
  <div class='splide__track'>
    <ul class='splide__list'>
      {images.map((img) => (
        <li class='splide__slide'>
          <Image
            src={img}
            alt=''
            width={800}
            height={400}
            class='rounded border-2 border-black w-full h-auto max-h-96 object-contain mx-auto'
          />
        </li>
      ))}
    </ul>
  </div>
</div>

<ImageCarouselClient client:only="react" />
